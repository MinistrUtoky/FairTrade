<Window x:Class="Fair_Trade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fair_Trade"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="2" x:Name="DancingShrek"></Canvas>
        <Image Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" x:Name="Main_Menu_Background"></Image>
        <Button Content="Start" Grid.Row="0" Grid.Column="2" x:Name="Start_Game" Width="Auto" Height="Auto" Click="Start_Game_Click"></Button>
        <Button Content="Settings" Grid.Row="1" Grid.Column="2" x:Name="Game_Settings" Width="Auto" Height="Auto"></Button>
        <Button Content="Exit" Grid.Row="2" Grid.Column="2" x:Name="Game_Exit" Width="Auto" Height="Auto"></Button>
    </Grid>
</Window>
