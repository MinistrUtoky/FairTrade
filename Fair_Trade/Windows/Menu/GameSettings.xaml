<Window x:Class="Fair_Trade.Windows.Menu.GameSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fair_Trade.Windows.Menu"
        mc:Ignorable="d"
        Title="GameSettings" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Background="Black" Height="450" Width="800">
    <Grid>        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Grid.ColumnSpan="3" x:Name="Main_Menu_Background"></Image>
        <StackPanel x:Name="Settings_Panel" Grid.Column="1">
            <StackPanel.Background>
                <ImageBrush></ImageBrush>
            </StackPanel.Background>
        </StackPanel>
    </Grid>
</Window>
